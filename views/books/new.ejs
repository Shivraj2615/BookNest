<% layout('layouts/boilerplate') -%>

<body>
  <div class="container mt-4 new-form-page">
    <h2 class="text-center mb-4">Add New Book</h2>

    <form action="/books" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Enter Title</label>
        <input type="text" name="book[title]" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter Book Title</div>
      </div>

      <div class="mb-3">
        <label for="author" class="form-label">Enter Author</label>
        <input type="text" name="book[author]" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter Author Name</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Enter Description</label>
        <textarea name="book[description]" id="description" class="form-control" required></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter Description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Enter Image Link</label>
        <input type="text" name="book[image]" class="form-control">
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Enter Price</label>
        <input type="number" name="book[price]" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter Price</div>
      </div>

      <button class="btn btn-primary mt-2">Add</button>
      <a href="/books" class="btn btn-outline-secondary mt-2 ms-2">Cancel</a>
    </form>
  </div>
</body>

