<% layout('layouts/boilerplate') -%>

<body>
  <div class="container mt-4">
    <h2 class="text-center mb-4">Welcome to BookNest</h2>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 g-4">
      <% if (allBooks.length === 0) { %>
      <h5 class="text-center">No books found for "<%= search %>"</h5>
      <% } 
      else { %> 
        <% for(let book of allBooks) { %>
        <div class="col">
          <div class="card book-card h-100">
            <img
              src="<%= book.image %>"
              class="card-img-top book-img"
              alt="Book Cover"
            />

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text price">â‚¹ <%= book.price %></p>
              <a href="/books/<%= book._id %>" class="btn btn-primary mt-auto"
                >View</a
              >
            </div>
          </div>
        </div>
        <% } %> 
      <% } %>
    </div>
  </div>
</body>
